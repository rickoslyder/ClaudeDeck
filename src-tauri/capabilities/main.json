{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main",
  "description": "Main capability for ClaudeDeck",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "fs:default",
    "fs:read-all",
    "dialog:default",
    "notification:default",
    "store:default",
    "store:allow-load",
    "store:allow-get-store",
    "store:allow-set",
    "store:allow-get",
    "store:allow-save",
    "core:tray:default"
  ]
}